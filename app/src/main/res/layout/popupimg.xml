<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.8"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"

            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_meetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_margin="5dp">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/tv_hobbyCate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취미목록"
                android:textColor="@color/black"
                android:layout_margin="5dp">
            </TextView>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/img_meetDate"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/Orange"
                android:src="@drawable/calendar"/>

            <TextView
                android:id="@+id/tv_meetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textColor="@color/black"
                android:layout_margin="5dp">

            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="나이"
                android:textColor="@color/none">

            </TextView>

            <TextView
                android:id="@+id/tv_meetAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="나이"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="성별"
                android:textColor="@color/none">

            </TextView>

            <TextView
                android:id="@+id/tv_meetGen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="성별"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임인원"
                android:textColor="@color/none"
                android:layout_margin="5dp">

            </TextView>


            <TextView
                android:id="@+id/tv_numMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임인원"
                android:textColor="@color/black"
                android:layout_margin="5dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >



            <ImageView
                android:id="@+id/img_place"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/Orange"
                android:src="@drawable/place_x"/>
            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="180"
                android:text="위치"
                android:textColor="@color/black"
                android:layout_margin="5dp">

            </TextView>


            <Button
                android:id="@+id/button_place"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_background2"
                android:text="지도보기"
                android:onClick="showDialog"
                android:textSize="35px" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textColor="@color/none"
                    android:layout_margin="5dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textColor="@color/black"
                    android:layout_margin="5dp">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"

                >


                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />



                <Button
                    android:id="@+id/button_check"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:text="참여하기"
                    android:onClick="showDialog"
                    android:textSize="35px" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

            </LinearLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>